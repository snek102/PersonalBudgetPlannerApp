
@model PersonalBudgetPlannerApp.Models.Income

@{
    ViewData["Title"] = "Delete Income";
}

<div class="bg-white p-8 rounded-lg shadow-md max-w-md mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Delete Income</h1>

    <p class="text-red-600 text-center mb-6">Are you sure you want to delete this income record?</p>

    
    <dl class="grid grid-cols-2 gap-x-4 gap-y-2 mb-6">
        <dt class="text-sm font-semibold text-gray-700">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="text-sm text-gray-900">
            @string.Format("{0:C}", Model.Amount)
        </dd>
        <dt class="text-sm font-semibold text-gray-700">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="text-sm text-gray-900">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="text-sm font-semibold text-gray-700">
            @Html.DisplayNameFor(model => model.IncomeDate)
        </dt>
        <dd class="text-sm text-gray-900">
            @Html.DisplayFor(model => model.IncomeDate)
        </dd>
        <dt class="text-sm font-semibold text-gray-700">
            Category
        </dt>
        <dd class="text-sm text-gray-900">
            @(Model.Category?.Name ?? "N/A") 
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="flex justify-center space-x-4 mt-6">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="inline-flex items-center px-5 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300">
            Back to List
        </a>
        <button type="submit" class="inline-flex justify-center py-2 px-5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-300">
            Delete
        </button>
    </form>
</div>