
@model PersonalBudgetPlannerApp.Models.Income

@{
    ViewData["Title"] = "Edit Income";
}

<div class="bg-white p-8 rounded-lg shadow-md max-w-xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Edit Income</h1>

    <form asp-action="Edit" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4 p-3 bg-red-50 rounded-md"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Amount" type="number" step="0.01" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
            <span asp-validation-for="Amount" class="text-red-600 text-xs mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Description" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
            <span asp-validation-for="Description" class="text-red-600 text-xs mt-1 block"></span>
        </div>

        <div>
            <label asp-for="IncomeDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="IncomeDate" type="date" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
            <span asp-validation-for="IncomeDate" class="text-red-600 text-xs mt-1 block"></span>
        </div>

        <div>
            <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1">Category (Optional)</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories as SelectList" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-red-600 text-xs mt-1 block"></span>
        </div>

        <div class="flex justify-end space-x-3 mt-6">
            <a asp-action="Index" class="inline-flex items-center px-5 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300">
                Back to List
            </a>
            <button type="submit" class="inline-flex justify-center py-2 px-5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300">
                Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}